---
import BaseLayout from "../layouts/BaseLayout.astro";
const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout sideBarActiveItemID="home">
    <div class="pb-12 mt-5">
        <!-- Hero igual... -->

        <!-- Featured Work Section - RESPONSIVE Y CON IMÁGENES CONTROLADAS -->
        <section class="mb-16 px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-base-content mb-4">Featured Projects</h2>
                <p class="text-lg text-base-content/70 max-w-3xl mx-auto">
                    A selection of impactful products I've architected, led, and delivered across fintech,
                    mobile banking, and blockchain domains.
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">

                <!-- Project 1: Monetta -->
                <a href={`${baseUrl}/projects#monetta`} class="group block">
                    <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-300 overflow-hidden h-full">

                        <!-- Imagen con tamaño FIJO y aspect ratio controlado -->
                        <figure class="relative w-full h-64 bg-gradient-to-br from-purple-900/20 to-blue-900/20 overflow-hidden">
                            <img
                                    src={`${baseUrl}/monetta.png`}
                                    alt="Monetta Digital Wallet"
                                    class="absolute inset-0 w-full h-full object-contain object-center group-hover:scale-110 transition-transform duration-500"
                            />
                            <!-- Overlay para mejor legibilidad de badges -->
                            <div class="absolute inset-0 bg-gradient-to-t from-base-300/50 to-transparent"></div>

                            <!-- Badges posicionados absolutamente -->
                            <div class="absolute top-4 left-4 flex gap-2 flex-wrap">
                                <span class="badge badge-primary badge-lg">FEATURED</span>
                            </div>
                        </figure>

                        <div class="card-body">
                            <div class="flex items-center gap-2 mb-2 flex-wrap">
                                <span class="badge badge-secondary">BLOCKCHAIN</span>
                                <span class="badge badge-primary">CTO</span>
                            </div>

                            <h3 class="card-title text-xl lg:text-2xl group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                Monetta Project
                            </h3>

                            <p class="text-base-content/70 leading-relaxed text-sm lg:text-base">
                                Digital wallet with blockchain integration on Polygon. Led team of 10 engineers
                                handling <strong class="text-base-content">50K+ daily transactions</strong> with 99.9% uptime.
                            </p>

                            <!-- Metrics Grid -->
                            <div class="grid grid-cols-3 gap-2 my-4 p-3 lg:p-4 bg-base-200 rounded-lg">
                                <div class="text-center">
                                    <div class="text-xl lg:text-2xl font-bold text-primary">10</div>
                                    <div class="text-xs text-base-content/60">Engineers</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-xl lg:text-2xl font-bold text-secondary">50K+</div>
                                    <div class="text-xs text-base-content/60">Daily Txns</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-xl lg:text-2xl font-bold text-success">99.9%</div>
                                    <div class="text-xs text-base-content/60">Uptime</div>
                                </div>
                            </div>

                            <!-- Tech Stack -->
                            <div class="flex flex-wrap gap-2">
                                <div class="badge badge-outline badge-sm lg:badge-md">TypeScript</div>
                                <div class="badge badge-outline badge-sm lg:badge-md">NestJS</div>
                                <div class="badge badge-outline badge-sm lg:badge-md">React Native</div>
                                <div class="badge badge-outline badge-sm lg:badge-md">Polygon</div>
                            </div>

                            <!-- CTA -->
                            <div class="mt-4 flex items-center gap-2 text-blue-600 dark:text-blue-400 font-semibold text-sm lg:text-base">
                                View case study
                                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- Project 2: Banking Apps -->
                <a href={`${baseUrl}/projects#banking`} class="group block">
                    <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-300 overflow-hidden h-full">

                        <!-- Imagen con tamaño FIJO -->
                        <figure class="relative w-full h-64 bg-gradient-to-br from-green-900/20 to-teal-900/20 overflow-hidden">
                            <img
                                    src={`${baseUrl}/pagatodo.png`}
                                    alt="Banking Applications"
                                    class="absolute inset-0 w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-500"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-base-300/50 to-transparent"></div>

                            <div class="absolute top-4 left-4">
                                <span class="badge badge-success badge-lg">FINTECH</span>
                            </div>
                        </figure>

                        <div class="card-body">
                            <h3 class="card-title text-xl lg:text-2xl group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                Banking Solutions Suite
                            </h3>

                            <p class="text-base-content/70 leading-relaxed text-sm lg:text-base mb-4">
                                Built mobile banking platforms and geolocation systems for Colombia's largest financial institutions,
                                impacting <strong class="text-base-content">500K+ users</strong>.
                            </p>

                            <!-- Lista compacta de proyectos -->
                            <ul class="space-y-2">
                                <li class="flex items-start gap-2">
                                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-success flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="text-xs lg:text-sm text-base-content/80"><strong>PagaTodo:</strong> Digital banking</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-success flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="text-xs lg:text-sm text-base-content/80"><strong>Davivienda:</strong> 500+ branches</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <svg class="w-4 h-4 lg:w-5 lg:h-5 text-success flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="text-xs lg:text-sm text-base-content/80"><strong>Daviplata:</strong> Location services</span>
                                </li>
                            </ul>

                            <div class="flex flex-wrap gap-2 mt-4">
                                <div class="badge badge-outline badge-sm lg:badge-md">React Native</div>
                                <div class="badge badge-outline badge-sm lg:badge-md">Node.js</div>
                                <div class="badge badge-outline badge-sm lg:badge-md">PostgreSQL</div>
                            </div>

                            <div class="mt-4 flex items-center gap-2 text-blue-600 dark:text-blue-400 font-semibold text-sm lg:text-base">
                                View projects
                                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </div>
                    </div>
                </a>

            </div>

            <!-- CTA Ver todos -->
            <div class="text-center mt-12">
                <a href={`${baseUrl}/cv`} class="btn btn-primary btn-md lg:btn-lg">
                    View All Projects
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </a>
            </div>
        </section>

        <!-- Logo Strip - RESPONSIVE -->
        <section class="mb-16 px-4">
            <div class="text-center mb-8">
                <p class="text-xs lg:text-sm font-semibold text-base-content/60 uppercase tracking-wider">
                    Trusted by leading organizations
                </p>
            </div>
            <!-- Grid responsive de logos -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 max-w-4xl mx-auto items-center justify-items-center">
                <div class="flex items-center justify-center h-12 w-full">
                    <img
                            src={`${baseUrl}/davivienda.png`}
                            alt="Davivienda"
                            class="max-h-8 w-auto grayscale hover:grayscale-0 transition-all object-contain"
                    />
                </div>
                <div class="flex items-center justify-center h-12 w-full">
                    <img
                            src={`${baseUrl}/daviplata.svg`}
                            alt="Daviplata"
                            class="max-h-8 w-auto grayscale hover:grayscale-0 transition-all object-contain"
                    />
                </div>
                <div class="flex items-center justify-center h-12 w-full">
                    <img
                            src={`${baseUrl}/monetta.png`}
                            alt="Monetta"
                            class="max-h-8 w-auto grayscale hover:grayscale-0 transition-all object-contain"
                    />
                </div>
                <div class="flex items-center justify-center h-12 w-full">
                    <img
                            src={`${baseUrl}/pagatodo.png`}
                            alt="PagaTodo"
                            class="max-h-8 w-auto grayscale hover:grayscale-0 transition-all object-contain"
                    />
                </div>
            </div>
        </section>

    </div>
</BaseLayout>
