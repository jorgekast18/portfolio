---
const { title, company, date, tags } = Astro.props;
---

<div class="relative pl-8 pb-12 group">
    <!-- Timeline Line & Dot -->
    <div class="absolute left-0 top-0 h-full w-[2px] bg-gradient-to-b from-blue-500 via-purple-500 to-transparent group-last:bg-gradient-to-b group-last:from-blue-500 group-last:to-transparent"></div>
    <div class="absolute left-0 top-1 w-4 h-4 -ml-[7px] bg-blue-600 dark:bg-blue-400 rounded-full border-4 border-white dark:border-gray-900 shadow-lg group-hover:scale-125 transition-transform duration-200"></div>

    <!-- Content Card -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border border-gray-100 dark:border-gray-700">
        <!-- Header with Title & Date -->
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-3">
            <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
                    {title}
                </h3>
                <p class="text-base font-semibold text-blue-600 dark:text-blue-400">
                    {company}
                </p>
            </div>
            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 md:text-right">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="font-medium">{date}</span>
            </div>
        </div>

        <!-- Description -->
        <div class="text-gray-700 dark:text-gray-300 space-y-2">
            <slot />
        </div>

        <!-- Tags (optional) -->
        {tags && tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    {tags.map((tag: string) => (
                            <span class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs font-medium px-2 py-1 rounded">
            {tag}
          </span>
                    ))}
                </div>
        )}
    </div>
</div>
