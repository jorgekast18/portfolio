---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects.ts";
const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
    <div class="max-w-6xl mx-auto px-4 py-12">
        <!-- Header -->
        <div class="mb-12 text-center">
            <h1 class="text-5xl font-bold mb-4">
                <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
                    Featured Projects
                </span>
            </h1>
            <p class="text-lg text-base-content/70 max-w-3xl mx-auto leading-relaxed">
                A selection of impactful products I've architected, led, and delivered
                across fintech, mobile banking, and blockchain domains.
            </p>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {projects.map((project, index) => (
                    <article class="group bg-base-100 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 overflow-hidden border border-base-300">

                        <!-- Project Image -->
                        {project.image && (
                                <figure class="relative w-full h-64 overflow-hidden bg-gradient-to-br from-base-300 to-base-200">
                                    <img
                                            src={${baseUrl}project.image}
                                            alt={project.title}
                                            class=`absolute inset-0 w-full h-full ${project.imageClass} object-center group-hover:scale-110 transition-transform duration-500`
                                    />
                                    <!-- Overlay -->
                                    <div class="absolute inset-0 bg-gradient-to-t from-base-300/60 to-transparent"></div>

                                    <!-- Featured Badge -->
                                    {index < 3 && (
                                            <div class="absolute top-4 left-4">
                                                <span class="badge badge-primary badge-lg">FEATURED</span>
                                            </div>
                                    )}
                                </figure>
                        )}

                        <div class="p-6">
                            <!-- Title & Role -->
                            <div class="mb-4">
                                <h2 class="text-2xl font-bold mb-3 text-base-content group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                    {project.title}
                                </h2>
                                {project.role && (
                                        <span class="inline-block bg-blue-100 dark:bg-blue-900/40 text-blue-800 dark:text-blue-200 text-sm font-semibold px-3 py-1 rounded-full">
                                    {project.role}
                                </span>
                                )}
                            </div>

                            <!-- Description -->
                            <p class="text-base-content/80 mb-6 leading-relaxed">
                                {project.description}
                            </p>

                            <!-- Metrics (si existen) -->
                            {project.metrics && (
                                    <div class="grid grid-cols-3 gap-2 mb-6 p-4 bg-base-200 rounded-lg">
                                        {project.metrics.map((metric) => (
                                                <div class="text-center">
                                                    <div class="text-xl lg:text-2xl font-bold text-primary">{metric.value}</div>
                                                    <div class="text-xs text-base-content/60">{metric.label}</div>
                                                </div>
                                        ))}
                                    </div>
                            )}

                            <!-- Tech Stack -->
                            <div class="mb-6">
                                <h3 class="text-xs font-semibold text-base-content/60 uppercase tracking-wide mb-3">
                                    Tech Stack
                                </h3>
                                <div class="flex flex-wrap gap-2">
                                    {project.tech.map((tech) => (
                                            <span class="badge badge-outline badge-sm lg:badge-md">
                                        {tech}
                                    </span>
                                    ))}
                                </div>
                            </div>

                            <!-- Links -->
                            {(project.demo || project.github) && (
                                    <div class="flex gap-4 pt-4 border-t border-base-300">
                                        {project.demo && (
                                                <a
                                                        href={project.demo}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        class="flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium text-sm transition-colors"
                                                >
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                                    </svg>
                                                    Live Demo
                                                </a>
                                        )}
                                        {project.github && (
                                                <a
                                                        href={project.github}
                                                        target="_blank"
                                                        rel="noopener noreferrer"
                                                        class="flex items-center gap-2 text-base-content/70 hover:text-base-content font-medium text-sm transition-colors"
                                                >
                                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                                                    </svg>
                                                    View Code
                                                </a>
                                        )}
                                    </div>
                            )}
                        </div>
                    </article>
            ))}
        </div>

        <!-- Call to Action -->
        <div class="mt-16 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-950/30 dark:to-purple-950/30 rounded-2xl p-8 lg:p-12 border-2 border-blue-200 dark:border-blue-800 text-center">
            <h2 class="text-3xl font-bold mb-4 text-base-content">
                Interested in working together?
            </h2>
            <p class="text-base-content/70 mb-8 max-w-2xl mx-auto leading-relaxed">
                I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
            </p>
            <a
                    href="mailto:jacr011893@gmail.com"
                    class="btn btn-primary btn-lg"
            >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Get in Touch
            </a>
        </div>
    </div>
</BaseLayout>
